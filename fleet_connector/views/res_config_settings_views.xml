<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.fleet.connector</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="80"/>
            <field name="inherit_id" ref="fleet.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                  <xpath expr="//div[@id='fleet']" position="after">
                    <div class="app_fleet_block" data-string="Fleet Connector" id="fleet_connector" string="Fleet" data-key="fleet_connector" groups="fleet.fleet_group_manager">
                        <h2>Fleet Connector</h2>
                            <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <label for="fleet_connector" string="Configure Fleet"/>
                                    <span class="fa fa-lg fa-globe" title="Values set here are website-specific." groups="website.group_multi_website"/>
                                    <div class="text-muted">
                                        UserName and Password To Connect
                                    </div>
                                        <div class="row mt16">
                                            <label class="col-lg-3 o_light_label" string="User Name" for="fleet_username"/>
                                            <field name="fleet_username" />
                                        </div>
                                        <div class="row">
                                            <label class="col-lg-3 o_light_label" for="fleet_password" />
                                            <field name="fleet_password"/>
                                        </div>
                                        <button name="import_fleet" type="object" string="Import Fleet" class="btn btn-primary" icon="fa-globe"/>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
