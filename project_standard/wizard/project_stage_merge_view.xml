<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="project_stage_merge_wizard_form" model="ir.ui.view">
        <field name="name">project.stage.merge.wizard.form</field>
        <field name="model">project.stage.merge.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group string="Merge Stage">
                    <field name="merge_from_id"/>
                    <field name="merge_to_id"/>
                </group>
                <footer>
                    <button name="action_project_stage_merge" string="Merge"
                           class="oe_highlight" type="object" />
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

    <act_window name="Merge Project Stage"
        id="project_stage_merge_wizard_action"
        res_model="project.stage.merge.wizard"
        binding_model="project.project"
        binding_views="form"
        view_mode="form"
        target="new"
    />      

</odoo>
